<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLanches.Pages.AddressPage"
             Title="AddressPage">

    <VerticalStackLayout Margin="20" Spacing="10" VerticalOptions="Start">

        <Label Text="Delivery Address" HorizontalOptions="Center" FontSize="Large"/>

        <Frame Padding="10" BackgroundColor="White">

            <VerticalStackLayout>

                <Entry Placeholder="Full Name" x:Name="EntNome" FontAttributes="Bold"
                       FontSize="Medium" Keyboard="Default"/>

                <Entry Placeholder="Phonenumber" x:Name="EntTelefone" FontAttributes="Bold"
                       FontSize="Medium" Keyboard="Telephone"/>

                <Entry Placeholder="Address" x:Name="EntEndereco" FontAttributes="Bold"
                       FontSize="Medium" Keyboard="Default"/> 

            </VerticalStackLayout>
            
        </Frame>

        <Button x:Name="BtnSalvar" Text="Save" FontSize="Medium" Clicked="BtnSalvar_Clicked"/>

    </VerticalStackLayout>
    
</ContentPage>